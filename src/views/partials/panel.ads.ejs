<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
      <div class="card w-100">
        <div class="card-body p-4">
          <% if(message) { %>
            <div class="row">
                <p class="alert alert-info"><%= message %></p>
            </div>
          <% } %>
          <div class="row">
            <h5 class="card-title fw-semibold mb-4 col-lg-6">آگهی‌های من</h5>
            <span class="col-lg-6 text-left">
              <div class="w-100 text-left" style="text-align: left">
                <a href="/ad/create" class="btn btn-info">انتشار آگهی جدید</a>
              </div>
            </span>
          </div>
          <div class="table-responsive">
            <table class="table text-nowrap mb-0 align-middle">
              <thead class="text-dark fs-4">
                <tr>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">شناسه آگهی</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">عنوان</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">توضیحات</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">زمان انتشار</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">مدیریت</h6>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if (!ads.length) { %>
                <tr>
                  <td colspan="5">
                    <p class="alert alert-warning text-center">در حال حاضر آگهی ثبت‌ شده ندارید.</p>
                  </td>
                </tr>
                <% } else { %>
                    <% ads.forEach(ad => { %>
                        <tr>
                            <td><%= ad._id %></td>
                            <td><%= ad.title %></td>
                            <td><%= ad.description %></td>
                            <td><%= moment(ad.createdAt).locale("fa").format("HH:mm ,jDD jMMMM jYYYY") %></td>
                            <td>
                                <form action="/ad/<%= ad._id %>" method="delete" class="d-inline">
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </form>
                                <a href="/ad/<%= ad._id %>" class="btn btn-success">مشاهده</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>