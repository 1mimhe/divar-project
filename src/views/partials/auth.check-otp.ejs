<div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
    <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
            <div class="col-md-8 col-lg-6 col-xxl-3">
                <div class="card mb-0">
                    <div class="card-body">
                        <a href="/" class="text-nowrap logo-img text-center d-block py-3 w-100">
                            <img src="/assets/images/logos/DivarLogo.png" width="120" alt="">
                        </a>
                        <p class="text-center">کد تایید را وارد کنید.</p>
                        <form action="/auth/check-otp?render=true" method="post">
                            <div class="mb-3">
                                <label for="mobile" class="form-label">شماره موبایل</label>
                                <input type="tel" class="form-control" id="mobile" value="<%= mobile %>" required disabled>
                                <input type="hidden" name="mobile" value="<%= mobile %>">
                            </div>
                            <div class="mb-3"></div>
                                <label for="code" class="form-label">کد تایید ۵ رقمی</label>
                                <input type="text" class="form-control" id="code" name="code" required>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                    <label class="form-check-label text-dark" for="flexCheckChecked" style="padding-right: 25px;">من را به خاطر بسپار</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-red w-75 py-8 fs-4 mb-4 rounded-2" style="margin: 0 auto;">ورود</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>