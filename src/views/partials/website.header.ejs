<header>
    <div class="container">
        <nav>
            <div class="logo">
                <a href="/">
                    <img class="logo-img" src="/home/img/download.svg" alt="" />
                </a>
                <hr/>
                <form action="/" method="get">
                    <div class="inline-input">
                        <input type="text" name="city" class="input-city" placeholder="<%= city ? "شهر" : "همهٔ شهرها" %>" value="<%= city %>"/>
                    </div>
                    <div class="category-span inline-input">
                        <span><%= category ? category.title : "همهٔ دسته‌ها" %></span>
                    </div>
                    <div class="inline-input">
                        <input type="text" name="search" class="input-search" placeholder="جستجو در همهٔ آگهی‌ها" value="<%= search %>"/>
                    </div>
                    <button type="submit" class="search-button inline-input"><span>جستجو</span></button>
                </form>
            </div>
            <div class="navbar">
                <button class="btn-header">
                    <img class="icon-header" src="/home/img/user.svg" alt="" />
                    <span>دیوار من</span>
                </button>
                <button class="btn-header">
                    <img class="icon-header" src="/home/img/message.svg" alt="" />
                    <span>چت</span>
                </button>
                <button class="btn-header">
                    <span>پشتیبانی</span>
                </button>
                <button class="btn-header btn-red">
                    <span>ثبت آگهی</span>
                </button>
            </div>
        </nav>
    </div>
</header>