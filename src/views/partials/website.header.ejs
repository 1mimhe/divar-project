<header>
    <div class="container">
        <nav>
            <div class="logo">
                <a href="/">
                    <img class="logo-img" src="/home/img/download.svg" alt="" />
                </a>
                <hr/>
                <form action="/" method="get">
                    <div class="inline-input">
                        <input type="search" name="city" class="input-city" placeholder="<%= city ? "شهر" : "همهٔ شهرها" %>" value="<%= city %>"/>
                    </div>
                    <div class="category-span inline-input">
                        <span>دسته: <%= category ? category.name : "همهٔ دسته‌ها" %></span>
                    </div>
                    <div class="inline-input">
                        <input type="search" name="search" class="input-search" placeholder="جستجو در همهٔ آگهی‌ها" value="<%= search %>"/>
                    </div>
                    <button type="submit" class="search-button inline-input"><span>جستجو</span></button>
                </form>
            </div>
            <div class="navbar">
                <div class="btn-header">
                    <img class="icon-header" src="/home/img/user.svg" alt=""/>
                    <a href="/my" style="color: #777;">دیوار من</a>
                </div>
                <div class="btn-header">
                    <img class="icon-header" src="/home/img/message.svg" alt=""/>
                    <a href="/chat" style="color: #777;">چت</a>
                </div>
                <div class="btn-header">
                    <img class="icon-header" src="/home/img/people.svg" alt=""/>
                    <a href="/" style="color: #777;">پشتیبانی</a>
                </div>
                <div class="btn-header btn-red">
                    <a href="/ad/create" style="color: white;">ثبت آگهی</a>
                </div>
            </div>
        </nav>
    </div>
</header>